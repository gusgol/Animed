
<div class="animed-content-client">
	<%= form_tag clients_path, :method => 'get', :class => "animed-search-form", :role => "form" do %>
		
		
		<%= text_field_tag :search, params[:search], :class => "animed-search-field", :placeholder => "Digite o nome para procurar" %>

		<%= button_tag(type: "submit", class: "btn btn-default btn-lg animed-btn animed-search-btn") do %>
	    	<i class="fa fa-search"></i>
		<% end %>
	<% end %>


	<%= link_to (new_client_path) do %>
	  <button type="button" class="btn btn-default btn-lg animed-btn animed-search-btn"><i class = "fa fa-plus"></i></button>
	<% end %>

	<% @clients.each do |client| %>
	  <%= link_to(client) do %>
	    <div class = "client-record">
	      <h2><%= client.name %></h2>
	      <p><%= client.cellphone %></p>
	      <p><%= client.email %></p>
	    </div>
	   <% end %> 
	<% end %>
</div>




